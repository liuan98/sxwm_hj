<app-layout vue-id="1" class="data-v-3114c43f" onVueInit="__l"><view class="comment-detail data-v-3114c43f"><view class="top-text dir-left-nowrap main-left data-v-3114c43f"><view class="prompt data-v-3114c43f">买家评价</view><block a:if="{{detail.is_show==='0'}}"><view class="show data-v-3114c43f">已隐藏</view></block></view><view class="content data-v-3114c43f"><view class="top dir-left-nowrap data-v-3114c43f"><image class="image data-v-3114c43f" src="{{detail.cover_pic}}"></image><view class="name dir-left-nowrap main-between data-v-3114c43f"><view class="name-text data-v-3114c43f"><view class="text data-v-3114c43f">{{detail.goods_name}}</view><view class="attr data-v-3114c43f">{{detail.attr_list[0].attr_group_name+"："+detail.attr_list[0].attr_name}}</view></view><view class="name-icon dir-top-nowrap main-center cross-center data-v-3114c43f"><image class="icon data-v-3114c43f" src="{{''+(detail.score==='3'?'../image/praise.png':detail.score==='2'?'../image/average.png':'../image/bad-review.png')}}"></image><view class="evaluation data-v-3114c43f">{{detail.score==='3'?'好评':detail.score==='2'?'中评':detail.score==='1'?'差评':''}}</view></view></view></view><view class="bottom data-v-3114c43f"><view class="bottom-text data-v-3114c43f">{{detail.content}}</view><view class="bottom-image dir-left-wrap data-v-3114c43f"><block a:for="{{detail.pic_url}}" a:for-item="item" a:for-index="index" a:key="index"><image lazy-load src="{{item}}" class="data-v-3114c43f"></image></block></view></view></view><view class="seller data-v-3114c43f">卖家回复</view><view class="area data-v-3114c43f"><textarea placeholder="请输入回复内容" placeholder-class="place" data-event-opts="{{[['blur',[['bindTextAreaBlur',['$event']]]]]}}" value="{{detail.reply_content}}" onBlur="__e" class="data-v-3114c43f"></textarea></view><view data-event-opts="{{[['tap',[['reply',['$event']]]]]}}" class="button data-v-3114c43f" onTap="__e">发布回复</view></view></app-layout>